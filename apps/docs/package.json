{
  "name": "starter-docs-docs",
  "description": "FumaDocs Starter - Search, Docs Sidebar, API Docs",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "build:preview": " bun run build && bun run start",
    "build": "rm -rf ./dist/* && next build --turbo",
    "build:api": "node ./scripts/generate-api-docs.mjs",
    "dev": "next dev --turbo",
    "start": "bunx concurrently \"npx serve -l 3000 ./dist --single\" \"sleep 2 && bunx open-cli http://localhost:3000\"",
    "check": "fumadocs-mdx && tsc --noEmit"
  },
  "dependencies": {
    "@fumadocs/mdx-remote": "^1.4.0",
    "@orama/orama": "^3.1.12",
    "fumadocs-core": "^15.7.7",
    "fumadocs-mdx": "^11.8.2",
    "fumadocs-openapi": "^9.3.4",
    "fumadocs-typescript": "^4.0.6",
    "fumadocs-ui": "^15.7.7",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "shiki": "^3.12.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  }
}
